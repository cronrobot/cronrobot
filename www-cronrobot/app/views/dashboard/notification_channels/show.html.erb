
<%= form_with model: [:dashboard, @notification_channel] do |form| %>
  <%= form.hidden_field :project_id %>

  <div class="form-group">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name %>
  </div>

  <!-- TODO - split into partials -->
  <div class="form-group">
    <%= form.label "configs[addresses]", "Email addresses (comma delimited)" %>
    <%= form.text_field "configs[addresses]", value: @notification_channel.configs&.dig("addresses") %>
  </div>

  <div class="form-group">
    
  </div>

  <%= form.submit %>
<% end %>
