<h1>Notification Channels</h1>

<a href="/dashboard/notification_channels/new" class="create-btn">
    <span>Create</span>
    <img src="/images/dashboard/icons/create.svg">
</a>

<table>
    <thead>
        <th>ID</th>
        <th>Type</th>
        <th>name</th>
        <th>actions</th>
    </thead>

    <tbody>
        <% @notification_channels.each do |notification_channel| %>
            <tr>
                <td><%= notification_channel.id %></td>
                <td><%= notification_channel.type %></td>
                <td><%= notification_channel.name %></td>
                <td>
                    <ul>
                        <li>
                            <%= link_to "Edit", "/dashboard/notification_channels/#{notification_channel.id}" %>
                        </li>
                        <li><%= link_to 'Destroy', "/dashboard/notification_channels/#{notification_channel.id}",
                            data: {:confirm => 'Are you sure?'}, :method => :delete %></li>
                    </ul>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>