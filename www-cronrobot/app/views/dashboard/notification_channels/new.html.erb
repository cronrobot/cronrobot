<h1>Create a notification channel</h1>
<%= form_with model: [:dashboard, @notification_channel] do |form| %>
  <%= form.hidden_field :project_id %>

  <div class="form-group mb-2">
    <%= form.text_field :name, class: "form-input", placeholder: "Name" %>
  </div>

  <div class="form-group">
    <%= form.select :type, NotificationChannel::NOTIFICATION_CHANNEL_TYPES, {}, class: "form-input", placeholder: "Type" %>
  </div>

  <%= form.submit :Create, class: "create-btn" %>
<% end %>
