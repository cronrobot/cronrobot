
<%= form_with model: [:dashboard, @scheduler] do |form| %>
  <%= form.hidden_field :project_id %>

  <div class="form-group">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <%= render "dashboard/schedulers/form_schedule", form: form %>

  <div class="form-group">
    <%= form.label "params[port]", "Port" %>
    <%= form.number_field "params[port]", class: "form-control", value: @scheduler&.params&.dig("port") %>
  </div>

  <div class="form-group">
    <%= form.label "params[host]", "Hostname" %>
    <%= form.text_field "params[host]", class: "form-control", value: @scheduler&.params&.dig("host") %>
  </div>

  <%= render "dashboard/schedulers/form_notification_channels", form: form %>

  <%= form.submit %>
<% end %>