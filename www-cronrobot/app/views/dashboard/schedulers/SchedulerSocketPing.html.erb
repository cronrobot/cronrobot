
<%= form_with model: [:dashboard, @scheduler] do |form| %>
  <%= form.hidden_field :project_id %>

  <div class="form-group">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :schedule, "Schedule" %>
    <%= form.text_field :schedule %>
  </div>

  <div class="form-group">
    <%= form.label "params[port]", "Port" %>
    <%= form.number_field "params[port]" %>
  </div>

  <div class="form-group">
    <%= form.label "params[host]", "Hostname" %>
    <%= form.text_field "params[host]" %>
  </div>

  <div class="form-group">
    <%= form.select :notification_channels, (@notification_channels.collect {|p| [ p.name, p.id ] }), {}, multiple: true %>
  </div>

  <%= form.submit %>
<% end %>