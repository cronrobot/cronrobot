
<%= form_with model: [:dashboard, @scheduler] do |form| %>
  <%= form.hidden_field :project_id %>

  <div class="form-group">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :schedule, "Schedule" %>
    <%= form.text_field :schedule, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "params[url]", "URL" %>
    <%= form.url_field "params[url]", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.select :notification_channels, (@notification_channels.collect {|p| [ p.name, p.id ] }), {}, multiple: true, class: "form-control" %>
  </div>

  <%= form.submit %>
<% end %>