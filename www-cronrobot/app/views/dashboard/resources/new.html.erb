<h1>Create a new project resource</h1>

<%= form_with class: "form-grid", model: [:dashboard, @resource] do |form| %>
  <%= form.hidden_field :reference_id %>

  <div class="form-group mb-2">
    <%= form.text_field "params[name]", class: "form-input resource-name", placeholder: "Name" %>
  </div>

  <div class="form-group">
    <%= form.select :sub_type,
      (ResourceProject::SUB_TYPES.map { |t| [resource_type_friendly(t), t] }), {}, class: "select-input" %>
  </div>

  <%= form.submit :Create, class: "create-btn" %>
<% end %>